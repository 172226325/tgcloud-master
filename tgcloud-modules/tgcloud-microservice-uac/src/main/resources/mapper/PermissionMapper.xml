<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tiger.tgcloud.uac.repository.mapper.PermissionMapper">
    <resultMap id="BaseResultMap" type="com.tiger.tgcloud.uac.model.domain.PermissionInfo">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="permname" jdbcType="VARCHAR" property="permname"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
        <result column="type" jdbcType="INTEGER" property="type"/>
        <result column="icon" jdbcType="VARCHAR" property="icon"/>
        <result column="sort" jdbcType="INTEGER" property="sort"/>
        <result column="parentid" jdbcType="BIGINT" property="parentid"/>
        <result column="url" jdbcType="VARCHAR" property="url"/>
        <result column="code" jdbcType="VARCHAR" property="code"/>
        <result column="version" jdbcType="INTEGER" property="version"/>
        <result column="creator" jdbcType="VARCHAR" property="creator"/>
        <result column="creator_id" jdbcType="BIGINT" property="creatorId"/>
        <result column="created_time" jdbcType="TIMESTAMP" property="createdTime"/>
        <result column="update_operator" jdbcType="VARCHAR" property="updateOperator"/>
        <result column="update_operator_id" jdbcType="BIGINT" property="updateOperatorId"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, permname, status, description, type, icon, sort, parentid, url, code, version, 
    creator, creator_id, created_time, update_operator, update_operator_id, update_time
  </sql>
    <sql id="Base_Colunm_Where">
        <if test="permname != null">
            ${alias}.permname = #{permname,jdbcType=VARCHAR}
        </if>
        <if test="status != null">
            ${alias}.status = #{status,jdbcType=INTEGER}
        </if>
        <if test="description != null">
            ${alias}.description = #{description,jdbcType=VARCHAR}
        </if>
        <if test="type != null">
            ${alias}.type = #{type,jdbcType=INTEGER}
        </if>
        <if test="icon != null">
            ${alias}.icon = #{icon,jdbcType=VARCHAR}
        </if>
        <if test="sort != null">
            ${alias}.sort = #{sort,jdbcType=INTEGER}
        </if>
        <if test="parentid != null">
            ${alias}.parentid = #{parentid,jdbcType=BIGINT}
        </if>
        <if test="url != null">
            ${alias}.url = #{url,jdbcType=VARCHAR}
        </if>
        <if test="code != null">
            ${alias}.code = #{code,jdbcType=VARCHAR}
        </if>
        <if test="version != null">
            ${alias}.version = #{version,jdbcType=INTEGER}
        </if>
        <if test="creator != null">
            ${alias}.creator = #{creator,jdbcType=VARCHAR}
        </if>
        <if test="creatorId != null">
            ${alias}.creator_id = #{creatorId,jdbcType=BIGINT}
        </if>
        <if test="createdTime != null">
            ${alias}.created_time = #{createdTime,jdbcType=TIMESTAMP}
        </if>
        <if test="updateOperator != null">
            ${alias}.update_operator = #{updateOperator,jdbcType=VARCHAR}
        </if>
        <if test="updateOperatorId != null">
            ${alias}.update_operator_id = #{updateOperatorId,jdbcType=BIGINT}
        </if>
        <if test="updateTime != null">
            ${alias}.update_time = #{updateTime,jdbcType=TIMESTAMP}
        </if>
    </sql>

    <select id="selectByRoleId" resultMap="BaseResultMap">
        SELECT p.*
        FROM uac_permission p
            INNER JOIN uac_role_permission rp ON p.id = rp.permid
            LEFT JOIN uac_role r ON rp.roleid = r.id
        WHERE r.id = #{roleId,jdbcType=BIGINT}
    </select>

    <sql id="selectByUserIdBase">
        SELECT p.*
        FROM uac_permission p
            INNER JOIN uac_role_permission rp ON p.id = rp.permid
            INNER JOIN uac_role r ON rp.roleid = r.id
            INNER JOIN uac_user_role ur ON r.id = ur.roleid
            INNER JOIN uac_user u ON u.id = ur.userid
    </sql>

    <select id="selectByUserId" parameterType="java.lang.Long" resultMap="BaseResultMap">
        <include refid="selectByUserIdBase"></include>
        WHERE u.id = #{userId,jdbcType=BIGINT}
    </select>

    <select id="selectByUserName" parameterType="java.lang.String" resultMap="BaseResultMap">
        <include refid="selectByUserIdBase"></include>
        WHERE u.username = #{userName,jdbcType=VARCHAR}
    </select>

    <select id="selectByCondition" parameterType="com.tiger.tgcloud.uac.model.query.PermissionParam"
            resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM uac_permission u
        <where>
            <if test="permname != null">
                u.permname = #{permname,jdbcType=VARCHAR}
            </if>
            <if test="status != null">
                u.status = #{status,jdbcType=INTEGER}
            </if>
            <if test="url != null">
                u.url = #{url,jdbcType=VARCHAR}
            </if>
        </where>
        order by u.update_time desc
    </select>
</mapper>