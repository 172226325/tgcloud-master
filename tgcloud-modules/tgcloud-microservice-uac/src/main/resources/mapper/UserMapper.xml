        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
    id, version, username, nickname, passwordhash, passwordsalt, gender, status, code,
    mobile, is_mobile_active, identitycard, email, is_email_active, source, type, qq,
    deptid, remark, creator, creator_id, created_time, update_operator, update_operator_id,
    update_time
    </sql>
    <sql id="Base_Colunm_Where">
        <if test="version != null">
            ${alias}.version = #{version,jdbcType=INTEGER},
        </if>
        <if test="username != null">
            ${alias}.username = #{username,jdbcType=VARCHAR},
        </if>
        <if test="nickname != null">
            ${alias}.nickname = #{nickname,jdbcType=VARCHAR},
        </if>
        <if test="passwordhash != null">
            ${alias}.passwordhash = #{passwordhash,jdbcType=VARCHAR},
        </if>
        <if test="passwordsalt != null">
            ${alias}.passwordsalt = #{passwordsalt,jdbcType=VARCHAR},
        </if>
        <if test="gender != null">
            ${alias}.gender = #{gender,jdbcType=INTEGER},
        </if>
        <if test="status != null">
            ${alias}.status = #{status,jdbcType=VARCHAR},
        </if>
        <if test="code != null">
            ${alias}.code = #{code,jdbcType=VARCHAR},
        </if>
        <if test="mobile != null">
            ${alias}.mobile = #{mobile,jdbcType=VARCHAR},
        </if>
        <if test="isMobileActive != null">
            ${alias}.is_mobile_active = #{isMobileActive,jdbcType=INTEGER},
        </if>
        <if test="identitycard != null">
            ${alias}.identitycard = #{identitycard,jdbcType=VARCHAR},
        </if>
        <if test="email != null">
            ${alias}.email = #{email,jdbcType=VARCHAR},
        </if>
        <if test="isEmailActive != null">
            ${alias}.is_email_active = #{isEmailActive,jdbcType=INTEGER},
        </if>
        <if test="source != null">
            ${alias}.source = #{source,jdbcType=VARCHAR},
        </if>
        <if test="type != null">
            ${alias}.type = #{type,jdbcType=VARCHAR},
        </if>
        <if test="qq != null">
            ${alias}.qq = #{qq,jdbcType=VARCHAR},
        </if>
        <if test="deptid != null">
            ${alias}.deptid = #{deptid,jdbcType=BIGINT},
        </if>
        <if test="remark != null">
            ${alias}.remark = #{remark,jdbcType=VARCHAR},
        </if>
        <if test="creator != null">
            ${alias}.creator = #{creator,jdbcType=VARCHAR},
        </if>
        <if test="creatorId != null">
            ${alias}.creator_id = #{creatorId,jdbcType=BIGINT},
        </if>
        <if test="createdTime != null">
            ${alias}.created_time = #{createdTime,jdbcType=TIMESTAMP},
        </if>
        <if test="updateOperator != null">
            ${alias}.update_operator = #{updateOperator,jdbcType=VARCHAR},
