        </if>
        <if test="updateTime != null">
            ${alias}.update_time = #{updateTime,jdbcType=TIMESTAMP},
        </if>
    </sql>

    <select id="selectByCondition" parameterType="com.tiger.tgcloud.uac.model.query.UserParam"
            resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>,d.deptname
        FROM uac_user u
        left join uac_department d
        on u.deptid=d.id
        <where>
            <include refid="Base_Colunm_Where">
                <property name="alias" value="u"></property>
            </include>
        </where>
        order by u.update_time desc
    </select>
</mapper>